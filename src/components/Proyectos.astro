---
import AngularIcon from "./icons/Angular.astro";
import TailwinIcon from "./icons/Tailwind.astro";
import DotNetCoreIcon from "./icons/DotNetCore.astro";
import SqlServer from "./icons/SqlServer.astro";

import HtmlIcon from './icons/Html.astro'
import CssIcon from './icons/Css.astro'
import JavaScriptIcon from './icons/Javascript.astro'
import AstroIcon from './icons/AstroIcon.astro'

import PortafolioImg from '../assets/portafolioProyecto.png';
import AppGastos from '../assets/appgastos.png';

import Discs50Img from '../assets/discs50.jpg';
import EcommerceImg from '../assets/ecommerce.jpg';

import DjangoIcon from './icons/Django.astro'; // Asegúrate de crear este ícono
import BootstrapIcon from './icons/BootstrapIcon.astro'; // Asegúrate de crear este ícono

const TAGS = {
  ANGULAR: {
    name: "Angular",
    class: "text-white bg-stone-900",
    icon: AngularIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwinIcon,
  },
  DOTNETCORE: {
    name: ".Net Core",
    class: "text-white bg-black",
    icon: DotNetCoreIcon,
  },
  SQLSERVER: {
    name: "SQL Server",
    class: "text-white bg-black",
    icon: SqlServer,
  },
  HTML: {
    name: 'Html',
    class:'text-white bg-black',
    icon: HtmlIcon
  },
  CSS: {
    name: 'Css',
    class:'text-white bg-black',
    icon: CssIcon
  },
  JAVASCRIPT: {
    name: 'Javascript',
    class:'text-white bg-black',
    icon: JavaScriptIcon
  },
  ASTRO: {
    name:'Astro',
    class:'text-white bg-stone-900',
    icon: AstroIcon
  },


  DJANGO: {
    name: 'Django',
    class: 'text-white bg-green-800', // Color verde oscuro para Django
    icon: DjangoIcon,
  },

  BOOTSTRAP: {
    name: 'Bootstrap',
    class: 'text-white bg-purple-800', // Color morado para Bootstrap
    icon: BootstrapIcon,
  },
};

const PROJECTS = [
  {
    title: "DisCS50",
    description:
      "La plataforma definitiva para la comunicación y colaboración en tiempo real! Ya sea para organizar discusiones, compartir conocimientos o simplemente conectar con otros estudiantes, DisCS50 te ofrece una experiencia de chat moderna y funcional.",
    link: "#",
    github: "#",
    image:
    Discs50Img.src,
    tags: [
      TAGS.DJANGO, // Django
      TAGS.HTML, // HTML
      TAGS.CSS, // CSS
      TAGS.BOOTSTRAP, // Bootstrap
      TAGS.JAVASCRIPT, // JavaScript
    ],
    typeProject: "Full Stack",
  },
  {
    title: "Auctions",
    description:
    "Este proyecto es una plataforma de subastas en línea similar a eBay, donde los usuarios pueden crear listados de productos, realizar ofertas, comentar en los listados, agregar productos a su lista de seguimiento y más.",
    link: "#",
    github: "#",
    image: EcommerceImg.src,
    tags: [
      TAGS.DJANGO, // Django
      TAGS.HTML, // HTML
      TAGS.CSS, // CSS
      TAGS.BOOTSTRAP, // Bootstrap
      TAGS.JAVASCRIPT, // JavaScript
    ],
    typeProject: "Full Stack",
  },
];
---

<div class="grid md:grid-cols-4 gap-4 mt-6">
  {
     PROJECTS.map(
      ({ image, title, description, link, github, tags, typeProject }) => (

  <div class="relative bg-dark-100 shadow dark:shadow-primary-50/10 dark:bg-dark-900 w-full rounded-3xl min-h-[340px] md:col-span-2 p-1 group overflow-hidden"
    ><figure class="w-full rounded-3xl overflow-hidden">
      <img
        class="w-full h-full min-h-[232px] object-cover group-hover:scale-105 group-hover:brightness-110 transition-all duration-300"
        src={image},
        alt="img"
        loading="lazy"
      />
    </figure><div class="p-6">
      <h1 class="font-bold text-lg text-primary-700 dark:text-primary-400">
       {title}
      </h1><p class="mt-4 text-pretty text-dark-700 dark:text-dark-200">
       {description}
      </p>
      <ul class="flex gap-1 flex-wrap text-sm mt-4">
        {tags.map((tag) => (
            <li class="rounded-full px-2 border-dark-200 dark:border-dark-800 bg-dark-300/60 dark:bg-primary-900/30 backdrop-blur-sm text-dark-700 dark:text-dark-200">
              <span
                class={`flex md:flex-nowrap gap-x-3 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-5" />
                {tag.name}
              </span>
            </li>
          ))}

      </ul>
    </div>
    <span class="absolute top-4 left-4 backdrop-blur-md bg-dark-600/50 py-1 px-2 rounded-full z-10 text-sm font-semibold text-dark-100"
      >{typeProject}
      </span>
      </div>
      )
    )
  }
</div>
